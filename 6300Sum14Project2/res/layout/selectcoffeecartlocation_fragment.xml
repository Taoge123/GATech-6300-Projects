<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff3f3f3"
    android:clickable="true"
    android:orientation="vertical" >

    <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:text="@string/select_coffee_cart_location"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <Spinner
        android:id="@+id/setCoffeeCartLocation_Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/setCoffeeCartLocation_SaveButton"
        style="android:imageButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        android:drawablePadding="0dp"
        android:drawableTop="@drawable/ic_submit_selector"
        android:text="@string/save"
        android:textSize="12sp" />

</LinearLayout>